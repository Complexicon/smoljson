{
	"configurations": [
		{
			"program": "${workspaceFolder}/bin/Debug/testapp",
			"name": "(gdb) Launch",
			"type": "cppdbg",
			"windows": {
				"program": "${workspaceFolder}/bin/Debug/testapp.exe",
			},
			"osx": {
				"MIMode": "lldb",
			},
			"MIMode": "gdb",
			"request": "launch",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"preLaunchTask": "build",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			]
		},
	]
}